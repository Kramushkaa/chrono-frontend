{
  "name": "chrononinja-frontend",
  "version": "1.0.0",
  "description": "Frontend for Chrono Ninja historical timeline",
  "private": true,
  "dependencies": {
    "compression": "^1.7.4",
    "express": "^4.18.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet-async": "^1.3.0",
    "react-router-dom": "^6.30.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.9.2",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/coverage-v8": "^4.0.6",
    "@vitest/ui": "^4.0.6",
    "happy-dom": "^20.0.10",
    "identity-obj-proxy": "^3.0.0",
    "jsdom": "^27.1.0",
    "source-map-explorer": "^2.5.3",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.6"
  },
  "scripts": {
    "dev": "vite",
    "start": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "serve": "node server.js",
    "analyze": "source-map-explorer 'build/assets/js/*.js'",
    "build:analyze": "npm run build && npm run analyze",
    "lighthouse": "lighthouse http://localhost:3000 --view --output html --output-path ./lighthouse/latest.html",
    "lighthouse:ci": "lighthouse http://localhost:3000 --output json --output-path ./lighthouse/latest.json --quiet --chrome-flags=\"--headless\""
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "overrides": {
    "nth-check": "^2.1.1",
    "postcss": "^8.4.31"
  }
}
