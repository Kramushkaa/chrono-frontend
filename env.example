# ============================================
# ЛОКАЛЬНАЯ РАЗРАБОТКА - .env.local
# ============================================
# Скопируйте этот файл в .env.local для локальной настройки
# См. ENVIRONMENT_VARIABLES.md для подробной документации

# Переключение на локальный backend в dev-режиме
# true = использовать localhost:3001
# false или не установлено = использовать удаленный backend
VITE_USE_LOCAL_BACKEND=true

# URL локального backend (default: http://localhost:3001)
VITE_LOCAL_BACKEND_URL=http://localhost:3001

# URL удаленного backend (default: https://chrono-back-kramushka.amvera.io)
VITE_REMOTE_BACKEND_URL=https://chrono-back-kramushka.amvera.io

# ============================================
# ОПЦИОНАЛЬНЫЕ НАСТРОЙКИ
# ============================================

# Кастомный URL API (переопределяет логику выбора выше)
# VITE_API_URL=http://custom-backend:3001

# Принудительный URL API (высший приоритет, переопределяет всё)
# VITE_FORCE_API_URL=http://test-backend:3001

# Показывать виджет BackendInfo (по умолчанию показывается в dev)
# VITE_SHOW_BACKEND_INFO=true